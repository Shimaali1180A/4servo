#include <Servo.h>

Servo servo1;
Servo servo2;
Servo servo3;
Servo servo4;

void setup() {
  servo1.attach(3);  // السيرفو 1 على D3
  servo2.attach(5);  // السيرفو 2 على D5
  servo3.attach(6);  // السيرفو 3 على D6
  servo4.attach(9);  // السيرفو 4 على D9
}

void loop() {
  // حركة Sweep لمدة 2 ثانية (من 0 إلى 180 والعكس)
  for (int pos = 0; pos <= 180; pos += 1) {
    servo1.write(pos);
    servo2.write(pos);
    servo3.write(pos);
    servo4.write(pos);
    delay(5);  // تأخير صغير للحركة السلسة
  }

  for (int pos = 180; pos >= 0; pos -= 1) {
    servo1.write(pos);
    servo2.write(pos);
    servo3.write(pos);
    servo4.write(pos);
    delay(5);
  }

  delay(2000); // انتظر 2 ثانية

  // ثبت الزاوية على 90 درجة
  servo1.write(90);
  servo2.write(90);
  servo3.write(90);
  servo4.write(90);

  while (true); // أوقف التكرار
}
